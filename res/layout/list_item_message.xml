<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:id="@+id/ContainertxtTimeForGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:background="#777777" />

        <TextView
            android:id="@+id/txtTimeForGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxWidth="300dp"
            android:paddingBottom="3dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="3dp"
            android:text="22 jan 2015"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.5"
            android:background="#777777" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ContainertxtTimeForGroup"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtUserNameForGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:text="user 07"
            android:textColor="#8470FF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/contentWithBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:background="@drawable/chat_in2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/contentWithBackground1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtMessStatus"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="left|top"
                    android:layout_marginRight="5dp"
                    android:text="seen"
                    android:textColor="#4c4c4c"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/contentWithBackground2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxWidth="230dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="5dp"
                        android:text="91177777777777"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageAttachment"
                        android:layout_width="230dp"
                        android:layout_height="230dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sampleava2"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtInfoForPix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginLeft="7dp"
                        android:paddingBottom="2dp"
                        android:singleLine="true"
                        android:text="28:00"
                        android:textColor="#4c4c4c"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginLeft="7dp"
                    android:paddingBottom="2dp"
                    android:singleLine="true"
                    android:text="28:00"
                    android:textColor="#4c4c4c"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>